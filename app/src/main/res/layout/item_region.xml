<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/card_margin_horizontal"
    android:layout_marginVertical="@dimen/card_margin_vertical"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardBackgroundColor="@color/surface"
    app:rippleColor="@color/primary_light"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_lg">

        <!-- Icono decorativo de región -->
        <View
            android:id="@+id/regionIndicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/accent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Nombre de la región -->
        <TextView
            android:id="@+id/tvRegionName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_default"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold"
            android:letterSpacing="0.01"
            app:layout_constraintBottom_toTopOf="@+id/tvRegionSubtitle"
            app:layout_constraintEnd_toStartOf="@+id/iconArrow"
            app:layout_constraintStart_toEndOf="@+id/regionIndicator"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Africa" />

        <!-- Subtítulo (puedes ocultarlo si no lo usas) -->
        <TextView
            android:id="@+id/tvRegionSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_default"
            android:layout_marginTop="@dimen/spacing_xs"
            android:text="@string/regions_title"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_body_small"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/iconArrow"
            app:layout_constraintStart_toEndOf="@+id/regionIndicator"
            app:layout_constraintTop_toBottomOf="@+id/tvRegionName"
            tools:visibility="visible" />

        <!-- Icono de flecha (chevron) -->
        <ImageView
            android:id="@+id/iconArrow"
            android:layout_width="@dimen/icon_size_md"
            android:layout_height="@dimen/icon_size_md"
            android:src="@android:drawable/ic_menu_more"
            android:tint="@color/text_tertiary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/regions_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>