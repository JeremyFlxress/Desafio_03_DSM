<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/card_margin_horizontal"
    android:layout_marginVertical="@dimen/card_margin_vertical"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:rippleColor="@color/primary_light"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_padding">

        <!-- Bandera con esquinas redondeadas -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/flagContainer"
            android:layout_width="@dimen/flag_width"
            android:layout_height="@dimen/flag_height"
            app:cardCornerRadius="@dimen/spacing_sm"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/border"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageViewFlag"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/cd_flag"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Nombre del paÃ­s -->
        <TextView
            android:id="@+id/textViewCountryName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_default"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_body_large"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/iconArrow"
            app:layout_constraintStart_toEndOf="@+id/flagContainer"
            app:layout_constraintTop_toTopOf="@+id/flagContainer"
            tools:text="South Africa" />

        <!-- Capital -->
        <TextView
            android:id="@+id/textViewCapital"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_body_small"
            app:layout_constraintEnd_toEndOf="@+id/textViewCountryName"
            app:layout_constraintStart_toStartOf="@+id/textViewCountryName"
            app:layout_constraintTop_toBottomOf="@+id/textViewCountryName"
            tools:text="Pretoria" />

        <!-- Icono de flecha -->
        <ImageView
            android:id="@+id/iconArrow"
            android:layout_width="@dimen/icon_size_md"
            android:layout_height="@dimen/icon_size_md"
            android:contentDescription="@string/regions_title"
            android:src="@android:drawable/ic_menu_more"
            android:tint="@color/text_tertiary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>